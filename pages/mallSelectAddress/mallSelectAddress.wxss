/* pages/mallSelectAddress/mallSelectAddress.wxss */
page{
    background-color: #E6E6E6;
}
.my-address{
    width: 100%;
    height: 98vh;
    padding-top: 2vh;
    background-color: #EDEDED;
}
.address-scroll{
    margin: 0 2%;
    width: 96%;
    padding:3vh 0;
    height: 82vh;
    background-color: #ffffff;
    border-radius:30rpx;
    margin-bottom: 2vh;
}
.address-box{
    width: 88%;
    margin: 0 6%;
    display: flex;
    align-items: center;
    padding-bottom: 20rpx;
}
.address-boxL{
    font-size: 28rpx;
    color: #151515;
    width: 87%;
}
.address-boxL1{
    display: block;

}
.address-boxL2{

}
.is-Default{
    opacity:0.8;
    border-radius:4rpx;
    width:48rpx;
    height:32rpx;
    line-height: 32rpx;
    font-size: 20rpx;
    color: #ffffff;
    background-color: #29B866;
    padding: 0 3rpx;
}
.address-boxR{
    width: 7%;
    padding: 5% 3%;
}
image{
    width: 100%;
    display: block;
}
.go-new{
    width:60%;
    margin-left: 20%;
    height:76rpx;
    line-height: 76rpx;
    background:#29B866;
    border-radius:38rpx;
    text-align: center;
    color: #ffffff;
    font-size:36rpx;
}
.color-66{
    color: #66696b;
}
.font-26{
    font-size: 26rpx;
}
.font-28{
    font-size: 28rpx;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}