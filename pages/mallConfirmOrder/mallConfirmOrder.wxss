/* pages/mallConfirmOrder/mallConfirmOrder.wxss */
page{
    background-color: #E6E6E6;
}
/*设置密码的一系列弹框*/
.dialog-style{
    width: 100%;height: 100vh;background-color: #00000050;position: absolute;left: 0;top: 0;
}
.dialog-window{
    width: 638rpx;position: absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);
}
.dialog-window-close{
    width: 100%;height: 47rpx;text-align: right;margin-bottom: 10rpx;
}
.dialog-window-close image{
    width: 47rpx;height: 47rpx;
}
.dialog-window-box1{
    background: url('https://cz.krjie.com/images/chengzi/green.png') 0 0/100%;
    box-sizing: border-box;width: 100%;border-radius:50rpx;
    padding: 24rpx
}
.dialog-window-title{
    width: 61rpx;height: 61rpx;display: block;margin: 0 auto;
}
.dialog-window-title-text{
    text-shadow: 0px 3rpx 4rpx rgba(24, 145, 100, 0.64);text-align: center;margin-bottom: 20rpx
}
.dialog-window-content{
    width: 100%;background-color: #FEFDF8;box-shadow: 0px 10rpx 0px 0px rgba(24, 173, 73, 0.42);border-radius: 30rpx;padding: 40rpx;box-sizing: border-box;
}

.dialog-btn{
    background:url('https://cz.krjie.com/images/chengzi/icon-btnBg.png') 0 0/100% 100%;
    text-align: center;
    font-weight: bold;
    color: #FFFFFF;
    text-shadow: 0px 3px 2px rgba(157, 96, 0, 0.4);
    margin: 0 auto;
}
.dialog-btn1{
    background:url('https://cz.krjie.com/images/chengzi/btn-quguangkan.png') 0 0/100% 100%;
    text-align: center;
    font-weight: bold;
    color: #FFFFFF;
    text-shadow: 0px 3px 2px rgba(157, 96, 0, 0.4);
    margin: 0 auto;
}