page{
    background-color: #E6E6E6;
}
.swiper-box{
    width: 100%;
    height: 100vw;
}
.image-you{
    width: 97%;
    border-radius: 30rpx;
    overflow: hidden;
}
.image-kong{
    width: 1.5%;
    height: 10rpx;
}
.swiper-box image{
    display: block;
    width: 100%;
    height: 100%;
}
.swiper-item{
    width: 100%;
    display: flex;
    height: 100vw!important;
}
.swiper-item image{
    height: 100vw!important;
    display: block;
}
.mall-dialog{
    width: 100%;height: 100vh;background-color: #00000050;position: fixed;left: 0;top: 100%;
    /*transition: all 0.5s;*/
}
.bottom-window{
    width: 100%;position: absolute;bottom: 0;
}